<p id="notice"><%= notice %></p>

<h1>Missing Transactions</h1>
<%if !@missing_transactions[:daily].empty? %>
  <h2>
    Hoje
  </h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Payee</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @missing_transactions[:daily].each do |transaction| %>
        <tr class="<%=transaction.category.category_type%>">
          <td><%= transaction.date %></td>
          <td class="currency"><%= number_to_currency(transaction.normalized_amount, unit: "") %></td>
          <td><%= transaction.category.full_description %></td>
          <td><%= transaction.payee %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2" class="currency"><%=number_to_currency(@current_balance, unit:"")%></td>
      </tr>
    </tfoot>
  </table>
<%end%>
